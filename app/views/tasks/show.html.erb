<div class="card" style="width: 18rem;">
  <div class="card-header">
    <h3><%= @task.title %></h3>
  </div>
  <div class="card-body">
    <h5 class="card-text"><%= @task.details  %></h5>
    <%= link_to 'Edit task', task_edit_path %>
    <%= link_to 'Delete task', task_path(@task), data: {turbo_method: :delete, turbo_confirm: 'Etes-vous sur ?'}%>
    <%= link_to 'Back to list', tasks_path %>
  </div>
</div>
